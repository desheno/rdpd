<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/btnEdit"
        android:text="Edit"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/btn_curvish_small"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightish"
            android:elevation="10dp"
            android:orientation="vertical"
            android:layout_gravity="center" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Account Details"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/lblUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/person"
            android:elevation="10dp"
            android:scaleType="fitCenter"/>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@drawable/shadow"
            android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_regular"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:hint="Name"
        android:id="@+id/upName"
        android:drawablePadding="4dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:hint="Email Address"
        android:id="@+id/upEmail"
        android:drawablePadding="4dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:hint="Address"
        android:id="@+id/upAddress"
        android:drawablePadding="4dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Number:"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:hint="Contact Number"
        android:id="@+id/upContact"
        android:drawablePadding="4dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="20sp"
        android:fontFamily="@font/bariol_bold"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/upPassword"
        android:textColorHint="#757575"
        android:drawablePadding="4dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"/>
        </LinearLayout>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_curvish"
        android:fontFamily="@font/bariol_bold"
        android:text="Update Profile" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_logish"
        android:fontFamily="@font/bariol_bold"
        android:text="Logout" />

    </LinearLayout>

</ScrollView>